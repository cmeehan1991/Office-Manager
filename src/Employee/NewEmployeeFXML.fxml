<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Employee.NewEmployeeFXMLController" alignment="TOP_CENTER" >
    <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
    <ButtonBar GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="8" GridPane.halignment="RIGHT">
        <buttons>
            <Button text="Submit" />
            <Separator orientation="VERTICAL"/>
            <Button text="Cancel" />
        </buttons>
    </ButtonBar>
    
   
    <Label text="Prefix:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Select" >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Mr."/>
                <String fx:value="Mrs."/>
                <String fx:value="Ms."/>
            </FXCollections>
        </items>
    </ComboBox> 
    <Label text="First Name:" GridPane.columnIndex="2" GridPane.rowIndex="1"/> 
    <TextField fx:id="firstName" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Label text="Last Name:" GridPane.columnIndex="4" GridPane.rowIndex="1"/> 
    <TextField fx:id="lastName" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    <Label text="Suffix:" GridPane.columnIndex="6" GridPane.rowIndex="1" />
    <ComboBox GridPane.columnIndex="7" GridPane.rowIndex="1" promptText="Select" >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Jr."/>
            </FXCollections>
        </items>
    </ComboBox> 
    
    <Separator GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="8"/>
    
    <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="150" />
    <Label text="Cell Phone:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <TextField fx:id="cellPhone" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
    <Label text="Home Phone:" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
    <TextField fx:id="homePhone" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
    <Label text="Other:" GridPane.columnIndex="6" GridPane.rowIndex="3"/>
    <TextField fx:id="otherPhone" GridPane.columnIndex="7" GridPane.rowIndex="3"/>
    
    <Separator GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="8"/>
    
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Street Address:" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <TextField fx:id="streetAddress" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
    <Label text="Apartment:" GridPane.columnIndex="4" GridPane.rowIndex="5"/>
    <TextField fx:id="apartment" GridPane.columnIndex="5" GridPane.rowIndex="5"/>
    <Label text="City:" GridPane.columnIndex="6" GridPane.rowIndex="5"/>
    <TextField fx:id="city" GridPane.columnIndex="7" GridPane.rowIndex="5"/>
    
    <Separator GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="8"/>
    
    <Label text="State:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="state" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Label text="Zip Code:" GridPane.columnIndex="2" GridPane.rowIndex="7"/>
    <TextField fx:id="zipCode" GridPane.columnIndex="3" GridPane.rowIndex="7"/>
    <Label text="Country:" GridPane.columnIndex="4" GridPane.rowIndex="7"/>
    <TextField fx:id="country" GridPane.columnIndex="5" GridPane.rowIndex="7"/>
    
    <Separator GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="8"/>
    
    <Label text="Birthday:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <DatePicker fx:id="birthday" GridPane.columnIndex="1" GridPane.rowIndex="9" maxWidth="150" />
</GridPane> 